{
	"manifest_version": 3,
	"name": "Face Detection",
	"version": "1.0",
	"permissions": ["activeTab", "scripting"],

	"icons": {
		"16": "icon16.png",
		"48": "icon48.png"
	},
	"background": {
		"service_worker": "dist/background.js",
		"type": "module"
	},
	"host_permissions": ["<all_urls>"],
	"content_scripts": [
		{
			"js": ["dist/content.js"],
			"matches": ["<all_urls>"],
			"run_at": "document_start"
		}
	],
	"web_accessible_resources": [
		{
			"resources": ["src/assets/models/*"],
			"matches": ["<all_urls>"]
		}
	]
}
